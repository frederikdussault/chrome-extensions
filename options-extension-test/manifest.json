{
  "manifest_version": 2,

  "name": "My Test Extension Options",
  "description": "This extension allows to test option features",
  "version": "1.0",

  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Test Extension Options"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}