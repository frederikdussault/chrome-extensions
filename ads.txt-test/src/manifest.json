{
  "name": "Ads.txt Watch Tool",
  "short_name": "Ads.txt Watch Tool",
  "description": "This extension allows AdTech to verify the presence and version of ads.txt file on a list of servers.  Update: watching v3.8",
  "version": "1.2.3",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
   
   "permissions": [
    "<all_urls>"
  ],

  "background": {
    "scripts": []
  },
  
  "browser_action": {
    "default_title": "Ads.txt Watch Tool",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "manifest_version": 2
}
