{
  "name": "[OPTIONS] WebProducer Redirection Test Tool",
  "description": "This extension allows the Webproducer to test a series of URLs based on current site's applied redirects.",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "<all_urls>",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_title": "Redirect test tool",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "manifest_version": 2
}
