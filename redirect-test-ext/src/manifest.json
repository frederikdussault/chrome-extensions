{
  "name": "WebProducer Redirection Test Tool",
  "description": "This extension allows the Webproducer to test a series of URLs based on current site's applied redirects.",
  "version": "1.0",

  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_title": "Redirect test tool",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",
 
  
  "manifest_version": 2
}